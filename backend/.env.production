# Production Environment Variables for Backend
# Copy this file to .env and fill in the actual values

# Database
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT Secret (generate a secure random string)
SECRET_KEY=your-very-secure-random-secret-key-here

# Stripe Configuration
STRIPE_API_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...

# Frontend URLs
FRONTEND_SUCCESS_URL=https://yourdomain.com/dashboard?payment=success
FRONTEND_CANCEL_URL=https://yourdomain.com/dashboard?payment=cancelled

# CORS Origins (comma-separated list of allowed domains)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com